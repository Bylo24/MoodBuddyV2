const debugName = async () => {
  try {
    const storedName = await AsyncStorage.getItem('user_display_name');
    Alert.alert(
      'Debug Info',
      `Current name in state: ${userName}\nStored name: ${storedName || 'None'}`
    );
    
    if (storedName && storedName !== userName) {
      setUserName(storedName);
      Alert.alert('Name Updated', `Updated name to: ${storedName}`);
    }
  } catch (error) {
    console.error('Error in debug:', error);
  }
};

// Add this somewhere in your JSX, perhaps in the header or as a temporary button
<TouchableOpacity 
  style={styles.debugButton}
  onPress={debugName}
>
  <Text style={styles.debugButtonText}>Debug Name</Text>
</TouchableOpacity>