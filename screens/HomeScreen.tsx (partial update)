// Add this somewhere in your UI for testing
<TouchableOpacity 
  style={{
    position: 'absolute',
    bottom: 20,
    right: 20,
    backgroundColor: 'red',
    padding: 10,
    borderRadius: 8,
    zIndex: 999,
  }}
  onPress={() => {
    console.log('Emergency logout button pressed');
    Alert.alert(
      'Emergency Logout',
      'Are you sure you want to log out?',
      [
        { text: 'Cancel', style: 'cancel' },
        { 
          text: 'Log Out', 
          style: 'destructive',
          onPress: () => {
            console.log('Emergency logout confirmed');
            onLogout();
          }
        }
      ]
    );
  }}
>
  <Text style={{ color: 'white', fontWeight: 'bold' }}>Emergency Logout</Text>
</TouchableOpacity>