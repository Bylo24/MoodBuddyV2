<TouchableOpacity 
  style={[styles.signOutButton, { marginTop: 8, backgroundColor: theme.colors.error }]}
  onPress={() => {
    console.log('Direct logout button pressed');
    onClose();
    setTimeout(() => onLogout(), 300);
  }}
>
  <Text style={[styles.signOutText, { color: 'white' }]}>Direct Logout (Debug)</Text>
</TouchableOpacity>