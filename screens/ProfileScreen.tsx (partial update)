    fontWeight: theme.fontWeights.bold,
    color: theme.colors.text,
    marginBottom: 12,
    paddingHorizontal: 8,
  },
  privacyItem: {
    flexDirection: 'row',
    alignItems: 'center',
    justifyContent: 'space-between',
    backgroundColor: theme.colors.card,
    borderRadius: 12,
    padding: 16,
    marginBottom: 8,
    ...theme.shadows.small,
  },
  privacyItemContent: {
    flex: 1,
    marginRight: 16,
  },
  privacyItemTitle: {
